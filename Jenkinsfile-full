pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID     = credentials('aws-access-key')
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-key')
        AWS_REGION            = 'ap-northeast-1'
        TF_PLUGIN_CACHE_DIR   = "${HOME}/.terraform.d/plugin-cache"
    }

    stages {

        stage('Terraform Init & Plan') {
            steps {
                echo "üöÄ Initializing Terraform..."
                dir('.') {
                    sh '''
                        mkdir -p $TF_PLUGIN_CACHE_DIR
                        terraform init -input=false -upgrade
                        terraform fmt -check
                        terraform validate
                        terraform plan -input=false -out=tfplan
                    '''
                }
            }
        }

        stage('Terraform Apply') {
            when {
                branch 'main'
            }
            steps {
                echo "‚öôÔ∏è Applying Terraform configuration (main branch only)..."
                dir('.') {
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }

        stage('Ansible Setup') {
            steps {
                echo "üß© Running Ansible setup-server.yml..."
                dir('ansible') {
                    sh 'ansible-playbook -i inventory.ini setup-server.yml'
                }
            }
        }

        stage('Ansible Deploy') {
            steps {
                echo "üì¶ Deploying Application via Ansible..."
                dir('ansible') {
                    sh 'ansible-playbook -i inventory.ini deploy-app.yml'
                }
            }
        }
    }

    post {
        success {
            slackSend(
                baseUrl: 'https://hooks.slack.com/services',
                teamDomain: 'anjali-project',
                tokenCredentialId: 'slack-webhook',
                channel: '#new-channel',
                color: 'good',
                message: "‚úÖ *SUCCESS:* ${env.JOB_NAME} #${env.BUILD_NUMBER} completed successfully!"
            )
            echo "‚úÖ Terraform + Ansible pipeline completed successfully!"
        }

        failure {
            slackSend(
                baseUrl: 'https://hooks.slack.com/services',
                teamDomain: 'anjali-project',
                tokenCredentialId: 'slack-webhook',
                channel: '#new-channel',
                color: 'danger',
                message: "‚ùå *FAILED:* ${env.JOB_NAME} #${env.BUILD_NUMBER} ‚Äî check Jenkins logs for details."
            )
            echo "‚ùå Terraform or Ansible stage failed ‚Äî check logs!"
        }

        always {
            cleanWs()
        }
    }
}
