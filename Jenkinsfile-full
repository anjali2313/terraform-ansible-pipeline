pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID     = credentials('aws-access-key')
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-key')
    }

    stages {
        stage('Terraform Init & Plan') {
            steps {
                echo "üöÄ Initializing Terraform..."
                dir('.') {
                    sh 'terraform init -input=false'
                    sh 'terraform validate'
                    sh 'terraform plan -out=tfplan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                echo "‚öôÔ∏è Applying Terraform configuration..."
                dir('.') {
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }

        stage('Ansible Setup') {
            steps {
                echo "üß© Running Ansible setup-server.yml..."
                dir('ansible') {
                    sh 'ansible-playbook -i inventory.ini setup-server.yml'
                }
            }
        }

        stage('Ansible Deploy') {
            steps {
                echo "üì¶ Deploying Application via Ansible..."
                dir('ansible') {
                    sh 'ansible-playbook -i inventory.ini deploy-app.yml'
                }
            }
        }
    }

    post {
        success {
            slackSend(channel: '#new-channel', color: 'good',
                message: "‚úÖ Build Successful: ${env.JOB_NAME} #${env.BUILD_NUMBER}")
        }
        failure {
            slackSend(channel: '#new-channel', color: 'danger',
                message: "‚ùå Build Failed: ${env.JOB_NAME} #${env.BUILD_NUMBER}")
        }
    }
}
