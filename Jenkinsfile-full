    post {
        success {
            echo "âœ… All stages completed successfully!"
            slackSend(channel: '#new-channel', color: 'good', message: "âœ… Build Successful: ${env.JOB_NAME} #${env.BUILD_NUMBER} by ${env.BUILD_USER}")
        }
        failure {
            echo "âŒ Build failed â€” check logs for details."
            slackSend(channel: '#new-channel', color: 'danger', message: "âŒ Build Failed: ${env.JOB_NAME} #${env.BUILD_NUMBER}")
        }
    }
