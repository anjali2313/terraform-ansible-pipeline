pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID     = credentials('aws-access-key')
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-key')
    }

    stages {
        stage('Terraform Init & Validate') {
            steps {
                echo "ğŸš€ Initializing Terraform configuration..."
                dir('.') {
                    sh 'terraform init -input=false'
                    sh 'terraform validate'
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                echo "ğŸ§¾ Generating Terraform Plan..."
                dir('.') {
                    sh 'terraform plan -out=tfplan'
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                echo "âš™ï¸ Applying Terraform changes..."
                dir('.') {
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }
    }

    post {
        success {
            echo "âœ… Terraform infrastructure deployed successfully!"
        }
        failure {
            echo "âŒ Terraform deployment failed â€” check logs!"
        }
    }
}
