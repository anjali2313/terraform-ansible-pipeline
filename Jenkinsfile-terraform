pipeline {
    agent any

    environment {
        AWS_ACCESS_KEY_ID     = credentials('aws-access-key')
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-key')
        AWS_REGION            = 'ap-northeast-1'
        TF_PLUGIN_CACHE_DIR   = "${HOME}/.terraform.d/plugin-cache"
    }

    stages {

        stage('Terraform Init & Validate') {
            steps {
                echo "üöÄ Initializing Terraform configuration..."
                dir('.') {
                    sh '''
                        mkdir -p $TF_PLUGIN_CACHE_DIR
                        terraform init -input=false -upgrade
                        terraform fmt -check
                        terraform validate
                    '''
                }
            }
        }

        stage('Terraform Plan') {
            steps {
                echo "üßæ Generating Terraform Plan..."
                dir('.') {
                    sh 'terraform plan -input=false -out=tfplan'
                }
            }
        }

        stage('Terraform Apply') {
            when {
                branch 'main'
            }
            steps {
                echo "‚öôÔ∏è Applying Terraform changes (main branch only)..."
                dir('.') {
                    sh 'terraform apply -auto-approve tfplan'
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Terraform infrastructure deployed successfully!"
        }
        failure {
            echo "‚ùå Terraform deployment failed ‚Äî check logs!"
        }
        always {
            cleanWs()
        }
    }
}
